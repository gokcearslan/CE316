                        <Insets left="10.0" top="30.0" />
                     </HBox.margin>
                  </Label>
                  <TextArea fx:id="inputTxt" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="87.0" prefWidth="258.0">
